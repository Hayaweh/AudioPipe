<UserControl x:Class="APGameEngine.Music_Choice_Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" Opacity="0.5">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TreeView x:Name="TreeView" HorizontalAlignment="Left" Margin="25,-50,0,0" VerticalAlignment="Center" Width="400" Height="400"/>
        <Label Content="Artist" HorizontalAlignment="Left" Margin="460,50,0,0" VerticalAlignment="Top" Width="300"/>
        <Label x:Name="Artist" Content="Name" HorizontalAlignment="Left" Margin="460,75,0,0" VerticalAlignment="Top" Width="300"/>

    </Grid>
</UserControl>
